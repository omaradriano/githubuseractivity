{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true
        
    },
    "include": ["src/**/*"]
}